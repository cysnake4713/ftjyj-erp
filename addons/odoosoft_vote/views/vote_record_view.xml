<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="tree_vote_vote_record_tree" model="ir.ui.view">
            <field name="name">view.odoosoft.vote.vote.record.tree</field>
            <field name="model">odoosoft.vote.vote.record</field>
            <field name="priority">16</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="user"/>
                </tree>
            </field>
        </record>

        <record id="tree_vote_vote_record_form" model="ir.ui.view">
            <field name="name">view.odoosoft.vote.vote.record.form</field>
            <field name="model">odoosoft.vote.vote.record</field>
            <field name="priority">16</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="user"/>
                            <field name="lines">
                                <tree editable="bottom">
                                    <field name="register"/>
                                    <field name="score"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>